<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/adapter_edit_item_CV"
        app:cardCornerRadius="12dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/adapter_edit_item_card_button">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/adapter_edit_item_image_view">

            </ImageView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_edit_itemInfo"
            android:layout_marginTop="250dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorBlack"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_car_title"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_text1"
                            />
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:id="@+id/adapter_edit_item_container_text2"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_text2"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        android:id="@+id/adapter_edit_item_container_text3"
                        android:background="@drawable/category_bg"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorWhite"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_text3"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adapter_edit_item_container_text4"
                        android:background="@drawable/car_details_bg"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_text4"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:id="@+id/adapter_edit_item_container_city"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_city"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/strike"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="5dp"
                            android:textSize="13dp"
                            android:visibility="gone"
                            android:textColor="@color/colorGreen"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_car_old_price"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/strike"
                            android:layout_margin="3dp"
                            android:textSize="15dp"
                            android:textColor="@color/colorGreen"
                            android:text="test text"
                            android:id="@+id/adapter_edit_item_car_price"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:layout_margin="3dp"
                                android:textColor="@color/colorGreen"
                                android:text="test text"
                                android:id="@+id/adapter_edit_item_car_new_price"
                                />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginStart="4dp"
                                android:id="@+id/adapter_edit_fire_iv"
                                android:background="@drawable/fire"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:alpha="0.6"
                        android:visibility="gone"
                        android:layout_marginRight="12dp"
                        android:background="@color/colorSilver"
                        android:layout_marginLeft="3dp"
                        >

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:weightSum="100">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="45">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:id="@+id/adapter_edit_edit_button"
                            android:background="@drawable/call_button_bg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/edit"
                                android:layout_marginLeft="1dp"
                                android:layout_marginStart="6dp"
                                android:textSize="18dp"
                                android:textColor="@color/colorWhite"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/adapter_edit_edit_tv"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/adapter_suggested_favorite_rl"
                        android:layout_weight="45">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:id="@+id/adapter_edit_delete_button"
                            android:background="@drawable/edit_button_bg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delete_option"
                                android:layout_marginLeft="1dp"
                                android:layout_marginStart="6dp"
                                android:textSize="18dp"
                                android:textColor="@color/colorWhite"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/adapter_edit_delete_tv"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/adapter_edit_messageInfo"
            android:layout_marginTop="250dp"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/can_not_see_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorRed"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="250dp"
                android:background="@color/colorSilver"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>