<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="420dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="12dp">


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/adapter_suggested_item_image_view">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="1dp"
                android:alpha="0.7"
                android:layout_marginStart="8dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp">

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:alpha="0.7"
                        android:background="@color/colorBlack"
                        >

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/number_of_image"
                                android:layout_centerHorizontal="true"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="12dp"
                                android:text="30"
                                android:layout_centerVertical="true"
                                android:id="@+id/adapter_suggested_item_number_of_item_image"
                                android:layout_marginLeft="4dp"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="4dp">

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:alpha="0.7"
                        android:background="@color/colorBlack"
                        >

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/comment"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="12dp"
                                android:text="30"
                                android:layout_centerVertical="true"
                                android:id="@+id/adapter_suggested_item_number_of_item_comment"
                                android:layout_marginLeft="4dp"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="208dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorBlack"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_title"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_make"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_model"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_year"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_condition"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_kilometers"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_license"
                            />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_insurance"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_transmission"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_paymentMethod"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_fuel"
                            />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorGreen"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_price"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:alpha="0.6"
                        android:layout_marginRight="12dp"
                        android:background="@color/colorSilver"
                        android:layout_marginLeft="3dp"
                        >

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:weightSum="100">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/phone_number"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <RelativeLayout
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:alpha="0.6"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorSilver"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/comment_2"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <RelativeLayout
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:alpha="0.6"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorSilver"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/item_favu"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="170dp"
                android:background="@drawable/profile"
                app:civ_shadow_color="#8BC34A"
                android:id="@+id/adapter_suggested_item_user_image"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>