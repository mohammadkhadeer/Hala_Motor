<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_wheels_inches_container_RL"
        android:background="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_color="@color/colorSilver"
                    app:civ_border_width="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0"
                    android:background="@drawable/profile"
                    app:civ_shadow_color="#8BC34A"
                    android:id="@+id/adapter_notification_process_iv"
                    />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="59dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0"
                    android:background="@drawable/profile"
                    app:civ_shadow_color="#8BC34A"
                    android:id="@+id/adapter_notification_user_iv"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="head title"
                        android:id="@+id/adapter_notification_head_tv"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title description"
                        android:id="@+id/adapter_notification_des_tv"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="8dp"
                        android:textSize="15dp"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="89.5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/colorBlack2">

    </RelativeLayout>


</RelativeLayout>