<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.5dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/add_activity_complete_car_dCV">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="8dp"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:id="@+id/adapter_car_details_titleTV"
                android:text="@string/complete_car_details"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorBlack"
                android:textSize="22dp"
                android:layout_marginTop="24dp"
                android:id="@+id/adapter_car_details_sub_titleTV"
                android:layout_marginBottom="4dp"
                android:text="@string/complete_car_details"/>

        </RelativeLayout>



        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="360dp"
            android:layout_centerVertical="true"
            android:id="@+id/adapter_car_details_arrow_IV"
            android:src="@drawable/arrow"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>
