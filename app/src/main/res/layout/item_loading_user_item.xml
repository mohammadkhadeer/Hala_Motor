<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="390dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="12dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/adapter_loading_image_load_rl"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginStart="0.5dp"
        >

      <ImageView
          android:id="@+id/adapter_loading_image_load"
          android:layout_width="match_parent"
          android:layout_marginLeft="-50dp"
          android:layout_height="200dp"
          android:src="@color/colorSilver_"
          />

      <ImageView
          android:id="@+id/adapter_loading_image_shin"
          android:layout_width="50dp"
          android:layout_marginLeft="-50dp"
          android:layout_height="200dp"
          android:src="@drawable/shine" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:id="@+id/adapter_loading_image_load_rl2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginStart="10dp"
        >

      <ImageView
          android:id="@+id/adapter_loading_image_load2"
          android:layout_width="match_parent"
          android:layout_marginLeft="-50dp"
          android:layout_height="25dp"
          android:layout_centerHorizontal="true"
          android:src="@color/colorSilver_"
          />

      <ImageView
          android:id="@+id/adapter_loading_image_shin2"
          android:layout_width="50dp"
          android:layout_marginLeft="-50dp"
          android:layout_height="25dp"
          android:src="@drawable/shine" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:id="@+id/adapter_loading_image_load_rl3"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginStart="10dp"
        >

      <ImageView
          android:id="@+id/adapter_loading_image_load3"
          android:layout_width="match_parent"
          android:layout_marginLeft="-50dp"
          android:layout_height="25dp"
          android:layout_centerHorizontal="true"
          android:src="@color/colorSilver_"
          />

      <ImageView
          android:id="@+id/adapter_loading_image_shin3"
          android:layout_width="50dp"
          android:layout_marginLeft="-50dp"
          android:layout_height="25dp"
          android:src="@drawable/shine" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:id="@+id/adapter_loading_load_rl4"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginStart="10dp"
        >

      <ImageView
          android:id="@+id/adapter_loading_image_load4"
          android:layout_width="match_parent"
          android:layout_marginLeft="-50dp"
          android:layout_height="25dp"
          android:layout_centerHorizontal="true"
          android:src="@color/colorSilver_"
          />

      <ImageView
          android:id="@+id/adapter_loading_image_shin4"
          android:layout_width="50dp"
          android:layout_marginLeft="-50dp"
          android:layout_height="25dp"
          android:src="@drawable/shine" />

    </RelativeLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>