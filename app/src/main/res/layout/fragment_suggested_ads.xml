<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/message_fragment"
    android:orientation="vertical"
    android:background="@color/colorSilverSelectedItem"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggested_to_you"
                android:textColor="@color/colorBlack"
                android:textSize="19dp"
                android:id="@+id/fragment_list_main_suggested_tv"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/fragment_list_main_see_all_stu_rl"
            android:layout_weight="20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textColor="@color/colorPurple"
                android:textSize="18dp"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="8dp"
                android:id="@+id/fragment_list_main_see_all_stu_tv"
                />

        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_similar_item_suggested_rv"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="0dp"
        />

</LinearLayout>

