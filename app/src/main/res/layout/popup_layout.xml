<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_message2"
            android:textColor="@color/colorBlack3"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/popup_layout_tv"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:id="@+id/popup_layout_rl"
            android:layout_marginTop="8dp"
            android:background="@drawable/follow_bg"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close"
                android:textSize="15dp"
                android:layout_marginTop="6dp"
                android:id="@+id/fragment_user_profile_follow_TV"
                android:textColor="@color/colorBlue5"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>